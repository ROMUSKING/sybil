{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "never"
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Compile and Watch",
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "echo": true,
                "focus": false
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        },
        {
            "label": "Compile Once",
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "echo": true,
                "focus": false
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Lint Code",
            "type": "npm",
            "script": "lint",
            "group": "test",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "echo": true,
                "focus": false
            },
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "Run Tests",
            "type": "npm",
            "script": "test",
            "group": "test",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "echo": true,
                "focus": false
            }
        }
    ]
}